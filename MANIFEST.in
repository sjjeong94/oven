# MANIFEST.in - Package data inclusion rules

# Include essential configuration files
include README.md
include LICENSE
include pyproject.toml
include CMakeLists.txt
include Makefile

# Include all Python source files
recursive-include oven_compiler *.py

# Include native modules for all platforms
recursive-include oven_compiler *.so
recursive-include oven_compiler *.pyd
recursive-include oven_compiler *.dll
recursive-include oven_compiler *.dylib

# Include C++ source files for reference
recursive-include oven_compiler *.cpp
recursive-include oven_compiler *.h
recursive-include oven_compiler *.hpp
recursive-include oven_compiler CMakeLists.txt

# Include MLIR/LLVM source and build files
recursive-include lib *.td
recursive-include lib CMakeLists.txt
recursive-include lib *.cpp *.h

# Include development scripts
recursive-include scripts *.sh
recursive-include scripts *.py

# Include test files
recursive-include tests *.mlir
recursive-include tests/python *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.tmp
global-exclude *.temp

# Exclude build directories
prune build/
prune dist/
prune *.egg-info/
prune .venv/
prune venv/

# Exclude LLVM project (too large)
prune llvm-project/